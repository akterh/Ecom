<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/edt_reg_mob"
        style="@style/edit_style"
        android:layout_marginTop="50dp"
        android:hint="Mobile Number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="phone"
        android:drawableRight="@drawable/ic_baseline_supervised_user_circle_24"/>

    <EditText
        android:id="@+id/edt_reg_pass"
        style="@style/edit_style"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt_reg_mob"
        android:hint="Password"
        android:inputType="text"
        android:drawableRight="@drawable/ic_pass"/>
    <EditText
        android:id="@+id/edt_reg_confirm_pass"
        style="@style/edit_style"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt_reg_mob"
        android:hint="Confirm Password"
        android:inputType="text"
        android:drawableRight="@drawable/ic_pass"/>
    <EditText
        android:id="@+id/edt_name"
        style="@style/edit_style"
        android:layout_marginTop="192dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt_reg_mob"
        android:hint="Name"/>
    <EditText
        android:id="@+id/edt_address"
        style="@style/edit_style"
        android:layout_marginTop="256dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt_reg_mob"
        android:hint="Address"
        android:inputType="textPostalAddress"/>

    <Button
        android:id="@+id/btn_submit"
        style="@style/button_style"
        android:layout_marginBottom="56dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>